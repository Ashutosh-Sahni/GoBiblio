<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoBiblio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorPrimaryVariant">@color/colorLight</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Font for app -->
        <item name="fontFamily">@font/my_font</item>
        <item name="android:fontFamily">@font/my_font</item>
        <!-- SnackBar Style-->
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarText</item>
    </style>
    <!--SnackBar background and text color-->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorBlack</item>
        <item name="backgroundTint">@color/colorBlack</item>
    </style>

    <style name="MySnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/colorLight</item>
    </style>
    <!--Progress dialog background-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>
</resources>